{{#liquid-if collapsed class='menu'}}
  <div class="menu collapsed">
      {{#frost-button class='icon large menu' onClick=(action 'toggleCollapsed')}}
          {{frost-icon icon='frost/menu'}}
      {{/frost-button}}
  </div>
{{else}}
  <div class="menu">
        <div class="pad-bottom-15">
          {{#frost-button class='icon large menu close' onClick=(action 'toggleCollapsed')}}
              {{frost-icon class='close' icon='frost/close'}}
          {{/frost-button}}
        </div>
    {{yield}}
  </div>
{{/liquid-if}}
{{#unless collapsed}}
    <div class='underlay' {{action (action 'toggleCollapsed')}}></div>
{{/unless}}
