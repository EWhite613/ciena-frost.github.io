{{#liquid-if collapsed class='menu'}}
	<div class="menu collapsed">
		{{#frost-button class='icon large menu' on-click=(action 'toggleCollapsed')}}
			{{frost-svg path='frost/menu'}}
		{{/frost-button}}
	</div>
{{else}}
	<div class="menu">
		{{yield}}
	</div>
{{/liquid-if}}

{{#unless collapsed}}
    <div class='underlay' {{action (action 'toggleCollapsed')}}></div>
{{/unless}}
