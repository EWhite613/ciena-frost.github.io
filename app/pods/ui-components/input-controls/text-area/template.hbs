<div class="md">{{#frost-tabs on-change=(action 'tabSelected') selection=selectedTab}}
	{{#frost-tab alias='Description' class='description' id='description'}}
		{{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-file-strip-number-prefix 'ui-components/input-controls/text-area')}}
		<div id='md-scrollspy' class='md-scrollspy'>
		</div>
	{{/frost-tab}}
	{{#frost-tab alias='API' id='api'}}
		  {{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-api-file 'ui-components/input-controls/text-area/README')}}
	{{/frost-tab}}
	{{#frost-tab alias='Demo' id='demo'}}
		<div><div class="dummy-notification-container">
  {{#each notifications as |notification|}}
    {{notification-message notification=notification}}
  {{/each}}
</div>

<div class="dummy-body">
  <div class="dummy-content">
    <div class='dummy-header'>Basic</div>
<div style="padding: 10px 20px;">
    {{frost-textarea id="basic" autofocus=true}}
</div>

<div class='dummy-header'>Defined number of Columns + Rows</div>
<div style="padding: 10px 20px;">
    {{frost-textarea id="columns-rows" cols="80" rows="6"}}
</div>

<div class='dummy-header'>Action</div>
<div style="padding: 10px 20px;">
    {{frost-textarea id="action" on-input=(action "text") value='Default text'}}
</div>

<div class='dummy-header'>Attributes - e.g. Disabled</div>
<div style="padding: 10px 20px;">
    {{frost-textarea id="disabled" disabled=true}}
</div>

<div class='dummy-header'>Attributes - e.g. Error</div>
<div style="padding: 10px 20px;display: flex;">
    {{frost-textarea style="margin-right: 10px;" id="error" classNameBindings="error" }}
    <div style="margin-left: 10px;"></div>
    {{#frost-button on-click=(action "toggleError") class="small secondary"}}
        <div class='text'>Toggle error</div>
    {{/frost-button}}
</div>

<div class='dummy-header'>Attributes - e.g. Read only</div>
<div style="padding: 10px 20px;">
    {{frost-textarea id="read-only" readonly=true value="Read only textarea"}}
</div>




  </div>
</div></div>

