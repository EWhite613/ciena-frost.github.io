<div class="md">{{#frost-tabs on-change=(action 'tabSelected') selection=selectedTab}}
	{{#frost-tab alias='Description' class='description' id='description'}}
		{{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-file-strip-number-prefix 'ui-components/input-controls/select')}}
	{{/frost-tab}}
	{{#frost-tab alias='API' class='api' id='api'}}
		  {{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-api-file 'ui-components/input-controls/select/README')}}
	{{/frost-tab}}
	{{#frost-tab alias='Demo' class='demo' id='demo'}}
		<div><div class="dummy-notification-container">
	{{#each notifications as |notification|}}
		{{notification-message notification=notification}}
	{{/each}}
</div>

<div class="dummy-body">
	<div class="dummy-content">
		<h1>Demo</h1>

<h2>Drop Down w/ Local Filtering</h2>
{{frost-select data=data on-change=(action "onChange")}}

<h2>Drop Down w/ Pre Selected Value</h2>
{{frost-select data=data on-change=(action "onChange") selected=singlePreSelected}}

<h2>Drop Down w/ External Filtering</h2>
{{frost-select data=data on-change=(action "onChange") on-input=(action "onInput")}}

<h2>Filterable MultiSelect</h2>
{{frost-multi-select data=data on-change=(action "onChange")}}

<h2>Filterable MultiSelect w/ Multiple Pre Selected Values</h2>
{{frost-multi-select data=data on-change=(action "onChange") selected=multiplePreSelected}}

	</div>
</div></div>

