<div class="md">{{#frost-tabs on-change=(action 'tabSelected') selection=selectedTab}}
	{{#frost-tab alias='Description' class='description' id='description'}}
		{{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-file-strip-number-prefix 'ui-components/input-controls/password')}}
	{{/frost-tab}}
	{{#frost-tab alias='API' id='api'}}
		  {{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-api-file 'ui-components/input-controls/password/README')}}
	{{/frost-tab}}
	{{#frost-tab alias='Demo' id='demo'}}
		<div><div class="dummy-notification-container">
  {{#each notifications as |notification|}}
    {{notification-message notification=notification}}
  {{/each}}
</div>

<div class="dummy-body">
  <div class="dummy-content">
    <div class='dummy-header'>Basic</div>

<div style="padding: 10px 20px;">
  {{frost-password id="basic"}}
</div>

<div class='dummy-header'>Action</div>

<div style="padding: 10px 20px;">
  {{frost-password id="action" on-input=(action "text")}}
</div>

<div class='dummy-header'>Errored</div>

<div style="padding: 10px 20px;">
  {{frost-password id="errored" classNameBindings="error"}}
  {{#frost-button on-click=(action "toggleError") class="text small secondary"}}
      Toggle error
  {{/frost-button}}
</div>

<div class='dummy-header'>Attributes - e.g. Disabled</div>

<div style="padding: 10px 20px;">
  {{frost-password id="disabled" disabled=true}}
</div>

<div class='dummy-header'>Revealable</div>

<div style="padding: 10px 20px;">
  {{frost-password id="revealable" value='x' revealable=true}}
</div>

  </div>
</div></div>

