			{{#scroll-to id="#specialbuttons" class="h3"}} Special buttons{{/scroll-to}}
		{{/scroll-spy}}
	{{/frost-tab}}
	{{#frost-tab alias='API' id='api'}}
		  {{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-api-file 'ui-components/button-controls/button/README')}}
		{{#scroll-spy}}
			{{#scroll-to id="#installation" class="h2"}} Installation{{/scroll-to}}
			{{#scroll-to id="#api" class="h2"}} API{{/scroll-to}}
			{{#scroll-to id="#examples" class="h2"}} Examples{{/scroll-to}}
			{{#scroll-to id="#text" class="h3"}} Text{{/scroll-to}}
			{{#scroll-to id="#icon" class="h3"}} Icon{{/scroll-to}}
			{{#scroll-to id="#icontext" class="h3"}} Icon Text{{/scroll-to}}
			{{#scroll-to id="#info" class="h3"}} Info{{/scroll-to}}
			{{#scroll-to id="#design" class="h3"}} Design{{/scroll-to}}
		{{/scroll-spy}}
	{{/frost-tab}}
