<div class="md">{{#frost-tabs on-change=(action 'tabSelected') selection=selectedTab}}
	{{#frost-tab alias='Description' class='description' id='description'}}
		{{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-file-strip-number-prefix 'ui-components/content-views/scrollbar')}}
		{{#scroll-spy}}
		{{/scroll-spy}}
	{{/frost-tab}}
	{{#frost-tab alias='API' id='api'}}
		  {{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-api-file 'ui-components/content-views/scrollbar/README')}}
		{{#scroll-spy}}
			{{#scroll-to id="#frostscroll" class="h1"}} Frost-scroll{{/scroll-to}}
			{{#scroll-to id="#installation" class="h2"}} Installation{{/scroll-to}}
			{{#scroll-to id="#running" class="h2"}} Running{{/scroll-to}}
			{{#scroll-to id="#runningtests" class="h2"}} Running Tests{{/scroll-to}}
			{{#scroll-to id="#building" class="h2"}} Building{{/scroll-to}}
			{{#scroll-to id="#examples" class="h2"}} Examples{{/scroll-to}}
			{{#scroll-to id="#development" class="h2"}} Development{{/scroll-to}}
			{{#scroll-to id="#setup" class="h3"}} Setup{{/scroll-to}}
			{{#scroll-to id="#developmentserver" class="h3"}} Development Server{{/scroll-to}}
			{{#scroll-to id="#testing" class="h3"}} Testing{{/scroll-to}}
		{{/scroll-spy}}
	{{/frost-tab}}
	{{#frost-tab alias='Demo' id='demo'}}
		<div><div class="dummy-notification-container">
	{{#each notifications as |notification|}}
		{{notification-message notification=notification}}
	{{/each}}
</div>

<div class="dummy-body">
	<div class="dummy-content">
		<div class="dummy-padding">
    <div style="width:800px; height:400px; border: 1px grey solid;">
      {{#frost-scroll class='full' on-scroll-y-end=(action 'yEndReached')}}
        {{frost-icon icon="frost/add" class="dummy-svg-huge"}}
      {{/frost-scroll}}
    </div>
</div>

	</div>
</div></div>

	{{/frost-tab}}
{{/frost-tabs}}
