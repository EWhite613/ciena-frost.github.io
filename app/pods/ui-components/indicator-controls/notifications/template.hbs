<div class="md">{{#frost-tabs on-change=(action 'tabSelected') selection=selectedTab}}
	{{#frost-tab alias='Description' class='description' id='description'}}
		{{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-file-strip-number-prefix 'ui-components/indicator-controls/notifications')}}
		{{#scroll-spy}}
		{{/scroll-spy}}
	{{/frost-tab}}
	{{#frost-tab alias='API' id='api'}}
		  {{markdown-to-html ghCodeBlocks=true tables=true class="guide-markdown" markdown=(fr-markdown-api-file 'ui-components/indicator-controls/notifications/README')}}
		{{#scroll-spy}}
			{{#scroll-to id="#emberfrostnotifier" class="h1"}} ember-frost-notifier{{/scroll-to}}
			{{#scroll-to id="#installation" class="h2"}} Installation{{/scroll-to}}
			{{#scroll-to id="#api" class="h2"}} API{{/scroll-to}}
			{{#scroll-to id="#methods" class="h3"}} Methods{{/scroll-to}}
			{{#scroll-to id="#addnotification" class="h3"}} addNotification{{/scroll-to}}
			{{#scroll-to id="#removenotification" class="h3"}} removeNotification{{/scroll-to}}
			{{#scroll-to id="#clearall" class="h3"}} clearAll{{/scroll-to}}
			{{#scroll-to id="#examples" class="h2"}} Examples{{/scroll-to}}
			{{#scroll-to id="#contributing" class="h2"}}Contributing{{/scroll-to}}
			{{#scroll-to id="#installation-1" class="h3"}} Installation{{/scroll-to}}
			{{#scroll-to id="#running" class="h3"}} Running{{/scroll-to}}
			{{#scroll-to id="#runningtests" class="h3"}} Running Tests{{/scroll-to}}
			{{#scroll-to id="#building" class="h3"}} Building{{/scroll-to}}
		{{/scroll-spy}}
	{{/frost-tab}}
	{{#frost-tab alias='Demo' id='demo'}}
		<div><div class="dummy-body">
  <div class="demo-application">
  <div class="demo-content">
    {{frost-notifier}}
    <form>
        <fieldset>
          <legend>Frost Notifications</legend>
          <div class='field'>
            <label>Message:</label>
            <div class='field-value'>
            {{frost-text id="message-field" type="text" value=message on-input=(action 'text')}}
            </div>
          </div>
          <div class='field'>
            <label>Type:</label>
            <div class='field-value'>
              {{frost-select data=selectData on-change=(action 'select')}}
            </div>
          </div>
          <div class='field'>
            <label>Timeout:</label>
            <div class='field-value'>
              {{frost-text value=clearDuration}}
            </div>
          </div>
          <div class='field'>
            <label></label>
            {{#frost-button priority="secondary" on-click=(action 'clearAll')}}Clear all{{/frost-button}}
            {{#frost-button id="show-notification" priority="primary" on-click=(action 'showNotification')}}Show{{/frost-button}}
          </div>
        </fieldset>
    </form>
  </div>
</div>

</div>
</div>

	{{/frost-tab}}
{{/frost-tabs}}
	<div class='footer'>
		<div class='info'>
			<div>
				<div class='contributors'>
					<span class="footerHeading">Contributors</span><div class='contributors-list'>Matthew Dahl - Sophy Pal - Eric White - Gosia Hyndman - Steven Glanzer</div>
			</div>
			<div class='connect'><div>
				<div class="footerHeading">Connect</div>
					 <div><a href="https://github.com/ciena-frost/ember-frost-notifier" class="gh-button"><img src="assets/images/gh-icon.png" width='20' height='20'><span>View on Github</span></a></div></div>
				</div>
			</div>
			<br/>
		</div>
		<div class='copyright'>
			
		</div>
	</div>
</div>